    <div class="action-buttons">
        <button class="discard-button">Discard</button>
        <button class="save-button" style="background-color:blue" id="saveButton">Save</button>
    </div>


    <div class="container" style="height:fit-content" >

        <div class="column">
          @*   <div class="row">
                <h3 style="margin-left:300px;"><b>Create RFQ</b></h3>

            </div>
            <br />
            <br /> *@
            <br />
            @* <h3>Basic Information</h3> *@
            <label for="vendor">Vendor</label>
            <select id="vendor" name="vendor">
                <option value="Vendor 1">Vendor 1</option>
                <option value="Vendor 2">Vendor 2</option>
                <option value="Vendor 3">Vendor 3</option>
            </select>

            <label for="vatRegistrationNumber">VAT Registration Number</label>
            <input type="text" id="vatRegistrationNumber" name="vatRegistrationNumber">

            <label for="createdDate">Created Date</label>
            <input type="date" id="createdDate" name="createdDate">

            <label for="expectedArrivalDate">Expected Arrival Date</label>
            <input type="date" id="expectedArrivalDate" name="expectedArrivalDate">

            <label for="buyer">Buyer</label>
            <select id="buyer" name="buyer">
                <option value="buyer1">Buyer 1</option>
                <option value="buyer2">Buyer 2</option>
                <option value="buyer3">Buyer 3</option>
            </select>

            <label for="paymentTerms">Payment Terms</label>
            <select id="paymentTerms" name="paymentTerms">
                <option value="cashOnDelivery">Cash on Delivery</option>
                <option value="creditCard">Credit Card Payment</option>
            </select>

            <label for="referenceDocument">Reference Document</label>
            <input type="text" id="referenceDocument" name="referenceDocument">

            <label for="shoppingPoint">Shopping Point</label>
            <select id="shoppingPoint" name="shoppingPoint">
                <option value="point1">Shopping Point 1</option>
                <option value="point2">Shopping Point 2</option>
                <option value="point3">Shopping Point 3</option>
            </select>
        </div>

        <div class="column">
           @*  <h3>Product Information</h3> *@
           <br />
            <label for="material">Material</label>
            <input type="text" id="material" name="material">

            <label for="arrivalDate">Arrival Date</label>
            <input type="date" id="arrivalDate" name="arrivalDate">

            <label for="quantity">Quantity</label>
            <input type="number" id="quantity" name="quantity">

            <label for="unitOfMeasure">Unit of Measure</label>
            <input type="text" id="unitOfMeasure" name="unitOfMeasure">

            <label for="unitPrice">Unit Price</label>
            <input type="text" id="unitPrice" name="unitPrice">

            <label for="vatPercentage">VAT Percentage</label>
            <input type="text" id="vatPercentage" name="vatPercentage">

            <label for="amountExcludingVAT">Amount Excl VAT</label>
            <input type="text" id="amountExcludingVAT" name="amountExcludingVAT">

            <label for="vatAmount">VAT Amount</label>
            <input type="text" id="vatAmount" name="vatAmount">

            <label for="totalAmountIncludingVAT">Total Amount Incl VAT</label>
            <input type="text" id="totalAmountIncludingVAT" name="totalAmountIncludingVAT">
        </div>



    </div>


    @section Scripts
        {
        <script>
            //edit: threw console.log around, nothing shows up in the browser console

            $(document).ready(function () {
                $("#saveButton").click(function () {
                    // Collect data from the form
                    var SaveRequest = {
                        vendor: $("#vendor").val(),
                        vatRegistrationNumber: $("#vatRegistrationNumber").val(),
                         createdDate: $("#createdDate").val(),
                         expectedArrivalDate: $("#expectedArrivalDate").val(),
                        buyer: $("#buyer").val(),
                        paymentTerms: $("#paymentTerms").val(),
                        referenceDocument: $("#referenceDocument").val(),
                        shoppingPoint: $("#shoppingPoint").val(),
                        material: $("#material").val(),
                        arrivalDate: $("#arrivalDate").val(),
                        quantity: $("#quantity").val(),
                        unitOfMeasure: $("#unitOfMeasure").val(),
                        unitPrice: $("#unitPrice").val(),
                        vatPercentage: $("#vatPercentage").val(),
                        amountExcludingVAT: $("#amountExcludingVAT").val(),
                        vatAmount: $("#vatAmount").val(),
                       totalAmountIncludingVAT: $("#totalAmountIncludingVAT").val()
                    };


                    $.ajax({
                        type: "POST",
                        url: "/Home/SaveAllData",
                        contentType: "application/json",
                        dataType: 'json',
                        data: JSON.stringify({ SaveRequest }),
                        success: function (response) {
                            // Handle success
                            alert(response);
                            console.log(response);
                        },
                        error: function (error) {
                            // Handle error
                            console.error("Error:", error);
                        }
                    });
                });
            });

        </script>
    }
</body>
</html>