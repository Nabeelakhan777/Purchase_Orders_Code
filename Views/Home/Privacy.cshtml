@using Purchase_Order.Models.DbDTOs.Responses;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Order Form</title>
    <style>
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #343a40;
            color: #fff;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <!-- Views/PurchaseOrders/Index.cshtml -->
    @model IEnumerable<Orders>
    <table class="thead-dark">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Vendor</th>
                <th>CreatedDate</th>
                <th>Buyer</th>
                <th>ExpectedArrivalDate</th>
                <th>ReferenceDocument</th>
                <th>AmountInclVAT</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchaseOrder in Model)
            {

                <tr>
                    <td>@purchaseOrder.Reference</td>
                    <td>@purchaseOrder.Vendor</td>
                    <td>@purchaseOrder.CreatedDate</td>
                    <td>@purchaseOrder.Buyer</td>
                    <td>@purchaseOrder.ExpectedArrivalDate</td>
                    <td>@purchaseOrder.ReferenceDocument</td>
                    <td>@purchaseOrder.AmountInclVAT</td>
                </tr>
            }
        </tbody>
    </table>


</body>
</html>